<h1> Editing Dude! </h1>
<p>
    <a href="#" id="dudeBtn">Back To Dude "{{dude}}"</a> |
    <a href="#" id="dudesBtn">All dudes</a>
</p>
<form id="dudeForm" enctype="multipart/form-data">
    Dude: <input type="text" name="dude" id="dudeInput" value="{{dude}}" required/>
    <br>
    Greeting: <input type="text" name="greeting" id="greetingInput" value="{{greeting}}" required />
    <br>
    <div id="inlineDatePicker"></div>
    <input type="hidden" name="date" id="dateInput" value={{URLdate}} />
    <br>
{{!--     <input type="file" name="photo" id="photoInput" />
 --}}    <br>


    <div id="displayImage">
        <img id="photoPreview" src="{{photo}}" width="300">
    </div>

    <div id="photoInputContainer" class="form-element">
        Edit Photo: <input id="photoInput" class="fileupload" type="file" name="photo">
    </div>

    <div class="form-sep">
    </div>

    <div id="displayThumb">
        <img id="thumbPreview" src="{{thumb}}" />
    </div>

    Edit Thumb:<input id="thumbInput" class="thumbupload" type="file" name="thumb">
    <hr />

    <input type="submit" value="Submit" name="submit" id="upload_btn">
</form>
<p>
    <a href="#" id="deleteDudeBtn">DELETE DUDE</a>
</p>